function check_virtual_env() {
  if [[ -v CONDA_DEFAULT_ENV ]]; then
    VIRTUALENVPROMPT="(%F{4}${PYTHON}%f ${CONDA_DEFAULT_ENV})"
  elif [[ -n "$VIRTUAL_ENV" ]]; then
    VIRTUALENVPROMPT="(%F{4}${PYTHON}%f ${VIRTUAL_ENV##*/})"
  else
    unset VIRTUALENVPROMPT
  fi
}
